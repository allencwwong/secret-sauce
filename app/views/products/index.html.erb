  <style type="text/css">
  </style>

  <div id="index" class="container">

  <div class="row cat-panel-row">
    <% @categories.each do |category|%>      
      <%= link_to product_path(category.id) do %>
       <div class="col-lg-4 pull-left">
           <div class="cat-panel">
             <div class="cat-panel-header">
                <h1><%= category.category_name %></h1>
             </div>
             <div class="cat-panel-img">
             <% category.photos.each_with_index do |photo,index| %>
                 <% if index == 0 %>
                 <%= image_tag(photo.photo_url) %>
                 <% end %>
              <% end %>
             <% end %>
             
             </div>

        </div>
      </div>
    <% end %>
    
  </div>    

<script>
$(function(){

$(".cat-panel").hover(
  function() {
    $( this ).css("box-shadow","2px 2px 6px #0080ff" );
    $( this ).css("border","1px solid #999" );
  }, function() {
    $( this ).css("box-shadow","2px 2px 4px #888" );
    $( this ).css("border","1px solid #aaa" );
  }
);

});


</script>