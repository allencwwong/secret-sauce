<style type="text/css">
  .padding-10{
    padding:0 10px 0 10px;
  }
</style>  

    <div id="show" class="container-fluid"><!-- Wrapper for slides -->
      <div id="myCarousel" class="carousel slide row" data-ride="carousel"> 
        <div class="carousel-inner col-lg-12" role="listbox">
          <div class="item active">
            <img src="" alt="Chania"> 

          </div>

          <div class="item">
            <img src="https://upload.wikimedia.org/wikipedia/commons/c/cc/2000LincolnTownCar.jpg" alt="Chania">
          </div>

          <div class="item">
            <img src="http://blog.caranddriver.com/wp-content/uploads/2015/09/Audi-e-tron-quattro-concept-placement-626x382.jpg" alt="Flower">
          </div>

        

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>

        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active" ><img src=""></li>
          <li data-target="#myCarousel" data-slide-to="1"><img src="https://upload.wikimedia.org/wikipedia/commons/c/cc/2000LincolnTownCar.jpg" alt="Chania"></li>
          <li data-target="#myCarousel" data-slide-to="2"><img src="http://blog.caranddriver.com/wp-content/uploads/2015/09/Audi-e-tron-quattro-concept-placement-626x382.jpg" alt="Flower"></li>
        </ol>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <h1><%= @categories.find_by(id: params[:id]).category_name %></h1>
      </div>
      <div class="col-lg-12">
        <p>Description</p>
      </div>
      <div class="col-lg-12">
        <h1>Applications</h1>
        <table class="table table-hover">

        <% @pt_applications.each do |application| %>
     
          <% if application.category_id == params[:id].to_i %>

          <tr>
            <th><%= application.product_id %></th>
            <th><%= application.make %></th>
            <th><%= application.model %></th>
            <th><%= application.year %></th>
            <th><%= application.note %></th>
          </tr>

          <% end %>
        <% end%>

        </table>
      </div>
      <form>
      <h1 class="col-xs-12">Questions? Give us a Call us 800-123-4567 or Send us a Message!</h1>
        <div class="padding-10">
        <div class="col-xs-6">
          <fieldset class="form-group">
            <label for="formGroupExampleInput">Example label</label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input">
          </fieldset>
          <fieldset class="form-group">
            <label for="formGroupExampleInput2">Another label</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
          </fieldset>
          </div>
        </div>
        <div class="padding-10">
        <div class="col-xs-6">
          <fieldset>
            <label>Message</label>
            <textarea class="form-control"></textarea>
          </fieldset>
          </div>
        </div>
      </form>

    </div>
  </div>


